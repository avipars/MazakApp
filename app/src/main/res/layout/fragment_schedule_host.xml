<LinearLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TabsFatherLayout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ProgressBar
        android:visibility="gone"
        android:id="@+id/ScheduleHost_ProgressBar"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ScheduleHost_MainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:id="@+id/ScheduleHost_TabLayout"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layoutDirection="ltr"
            android:textAlignment="center"
            android:elevation="2dp"
            android:theme="@style/Base.AlertDialog.AppCompat"
            app:tabSelectedTextColor="@color/cardview_light_background"
            app:tabTextColor="@color/cardview_light_background"
            app:tabIndicatorColor="@color/colorPrimary" />

        <android.support.v4.view.ViewPager
            android:id="@+id/ScheduleHost_viewPager"
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background" />

    </LinearLayout>


    </LinearLayout>

